<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="n.headsup.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#6499ac">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عربي"
        android:id="@+id/arabicBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#8932589a"
        android:background="#7d64e2a9"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/englishBtn"
        android:layout_below="@+id/arabicBtn"
        android:layout_marginTop="38dp"
        android:layout_alignRight="@+id/arabicBtn"
        android:layout_alignEnd="@+id/arabicBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#8932589a"
        android:background="#7d64e2a9"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Both"
        android:id="@+id/bothBtn"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/englishBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#8932589a"
        android:background="#7d64e2a9"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Heads Up"
        android:id="@+id/title"
        android:textAlignment="center"
        android:textSize="60dp"
        android:textColor="#8932589a"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
