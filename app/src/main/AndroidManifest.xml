<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="n.headsup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RoundsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_rounds"
            android:screenOrientation="sensor"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".StarterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_starter"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArabicActivity"
            android:label="@string/title_activity_arabic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnglishActivity"
            android:label="@string/title_activity_english"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BothActivity"
            android:label="@string/title_activity_both"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
